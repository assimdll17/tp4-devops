pipeline { 
 environment { 
  registry = "assimdll/webapp" 
  registryCredential = 'Aassmm99@' 
  dockerImage = '' 
 } 
 agent any 
 stages { 
  stage('Cloning Git') {
   steps { 
    git 'https://github.com/assimdll17/tp4-devops' 
   } 
  } 
  stage('Building image') { 
   steps{ 
    script { 
     dockerImage = docker.build registry + ":$BUILD_NUMBER"
    } 
   } 
  } 
  stage('Test image') { 
   steps{ 
    script { 
     echo "Tests passed" 
    } 
   } 
  } 
  stage('Publish Image') { 
   steps{ 
    script { 
     docker.withRegistry( '', registryCredential ) { 
      dockerImage.push() 
     } 
    } 
   } 
  } 
 } 
}